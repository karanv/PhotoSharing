<h2>Search Pictures</h2>

<div>

<input type="text" id="search_string" />
	<div id="matchingPics">
	</div>
</div>

<h2>Listing Users</h2>

<script type="text/javascript">

new AjaxSearch("search_string", "/pics/search", "substring", "matchingPics");
</script>


<table>
       	<% @users.each_slice(5) do |slice| %>
			<tr>
				<%slice.each do |user|%>
                	<% name = user.first_name + " " + user.last_name %>
					<td class = "name">
					<%= link_to name, :action => 'user', :id => user.id %></td>
				<%end%>
			</tr>
        <% end %>
</table>
